<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trevorwarner.individualgame.LeaderBoard"
    android:background="#ff60e6b7"
    android:orientation="vertical"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_leader_board"
        android:id="@+id/LBtextview"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_column="0"
        android:layout_row="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:id="@+id/imageView2"
            android:src="@drawable/first_trophy"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/firstPlace"
            android:layout_gravity="center"
            android:paddingTop="@dimen/LBpadding"
            android:paddingBottom="@dimen/LBpadding"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="26dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/trophy_text_pad"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/imageView3"
            android:src="@drawable/second_trophy"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/secondPlace"
            android:layout_gravity="center"
            android:paddingTop="@dimen/LBpadding"
            android:paddingBottom="@dimen/LBpadding"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="24dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/trophy_text_pad"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:id="@+id/imageView4"
            android:src="@drawable/third_trophy"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:paddingTop="@dimen/bronze_trophy_padding"
            android:paddingBottom="@dimen/bronze_trophy_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/thirdPlace"
            android:layout_gravity="center"
            android:paddingTop="@dimen/LBpadding"
            android:paddingBottom="@dimen/LBpadding"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/trophy_text_pad"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="4"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fourth"
            android:id="@+id/fourthPlaceText"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/fourthPlace"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/trophy_text_pad"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthPlaceText"
            android:text="@string/fifth"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_below="@+id/fourthPlaceText"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthPlace"
            android:textSize="16dp"
            android:layout_alignTop="@+id/fifthPlaceText"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/trophy_text_pad"
            android:gravity="left" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menuString"
        android:id="@+id/menuButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_row="6"
        android:layout_columnWeight="1"
        android:layout_gravity="center_horizontal|bottom" />

</GridLayout>
